<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom"
  xmlns:media="http://search.yahoo.com/mrss/"
  xmlns:dc="http://purl.org/dc/elements/1.1/"
  xmlns:content="http://purl.org/rss/1.0/modules/content/">
  <channel>
    <title>Jekyll Casts</title>
    <description>Weekly video tutorials for using Jekyll</description>
    <link>
    {{ site.url }}</link>
    <atom:link href="{{ site.url }}/feed.xml" rel="self" type="application/rss+xml" />
    {% for post in site.posts %}
      {% unless post.link %}
      <item>
        <title>{{ post.title | xml_escape }}</title>
        <description>{{ post.description | xml_escape }}</description>
        <content:encoded>
          <![CDATA[
          <div style="background: #4d4d4d; border-radius: 5px; padding:8px; margin: 0 auto; max-width: 400px;" bgcolor="#4d4d4d">
<table>
	<tbody>
		<tr>
			<td align="left" class="full" valign="top">
			<div class="inner-pad">
			<h2 style="padding: 0; margin: 0;"><a style="color: #ffcc00; text-decoration: none;" href="{{ site.url }}{{ post.url }}" target="_blank">{{ post.title | xml_escape }}</a></h2>

			<p class="description" style="margin: 0 !important; padding:3px 0; color: #dcdcdc; font-size: .7em !important">Episode #{{ post.episode }} - {{ post.date | date: "%b %d, %Y" }} - {{ post.length }} minutes</p>

			<p style="margin: 0 !important; color: #dcdcdc">{{ post.description | xml_escape }}</p>
			</div>
			</td>
		</tr>
		<tr>
			<td align="center" class="full"><img style="max-width: 100%; display: block;" width="100%" src="{{ site.url }}{{ post.image_path }}"/></td>
		</tr>
	</tbody>
</table>
</div>
          ]]>
        </content:encoded>
        <pubDate>{{ post.date | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
        <link>
        {{ site.url }}{{ post.url }}</link>
        <guid isPermaLink="true">{{ site.url }}{{ post.url }}</guid>
      </item>
      {% endunless %}
    {% endfor %}
  </channel>
</rss>
